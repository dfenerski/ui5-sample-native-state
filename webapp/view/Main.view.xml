<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    controllerName="com.github.dfenerski.native_state.controller.Main"
    displayBlock="true"
>
    <Page title="{i18n>appTitle}">
        <content>
            <Table items="{path: 'task>/items', templateShareable: false}">
                <columns>
                    <Column>
                        <Text text="{i18n>taskTitle}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>taskDescription}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{task>title}" />
                            <Text text="{task>description}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
